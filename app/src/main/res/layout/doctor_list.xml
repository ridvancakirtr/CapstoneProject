<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctorPictures"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/textViewDoctorNameSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/doctorPictures"
            android:paddingBottom="1dp"
            android:text="Viral Android"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewAreaExpertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewDoctorNameSurname"
            android:layout_below="@+id/textViewDoctorNameSurname"
            android:text="Free android "
            android:textColor="#8b8b8b" />

        <TextView
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewDoctorNameSurname"
            android:layout_below="@+id/textViewAreaExpertise"
            android:text="Free android "
            android:textColor="#8b8b8b" />

    </RelativeLayout>
</android.support.v7.widget.CardView>